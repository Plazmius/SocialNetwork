@using Njinx.App.Models
@using Njinx.Service.Tools
@model Njinx.App.Models.ProfileViewModel

@{
    ViewBag.Title = "title";
}
<h2>Your page</h2>
<div class="row">
    <div class="col-md-8">
        <section id="profileShow">
            <div class="form-group">
                <img src="@String.Format("data:image/png;base64,{0}", Model.ProfileImage)" class="img-responsive"/>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "col-md-4 control-label" })
                @Html.DisplayFor(model => model.Name, new { @class = "col-md-4 control-label" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Surname, new { @class = "col-md-4 control-label" })
                @Html.DisplayFor(model => model.Surname, new { @class = "col-md-4 control-label" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.BirthDate, new { @class = "col-md-4 control-label" })
                @Html.DisplayFor(model => model.BirthDate, new { @class = "col-md-4 control-label" })
            </div>
            <div class="btn-group" role="group" aria-label="Basic example">
                @Html.Button("Friends", new { @class = "btn btn-secondary" })
                @Html.Button("Chats", new { @class = "btn btn-secondary" })
                @Html.Button("Something else", new { @class = "btn btn-secondary" })
            </div>
        </section>
    </div>
</div>